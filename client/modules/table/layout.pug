mixin responsive-table()
  table.js-table(class=attributes.class)&attributes(attributes)
    block

mixin emptyRow(text)
  tr
    td(colspan=999).empty=text

mixin tablePagination(activeResults, totalResults, pageSize)
  .section.center.pagination.js-pagination(data-total-results=totalResults, data-active-results=activeResults, data-page-size=pageSize, class=attributes.class)
    //- Placeholder, links are generated by javascript

mixin tableFilters()
  .section.section--content.filters.entity-filters.l-f-contain.l-grid(data-entityId=entityId, data-userid=userId, data-showpaywall=''+showPaywall)
    block

mixin tableStatusFilter(activeItems, totalItems, activeOnlySelected)
  .radiogroup.js-current-filter.l-grid-cell.l-tablet-one-whole(class=attributes.class)
    .l-grid
      .l-grid-cell.l-tablet-one-half
        input(name="active", id="active-on", type="radio", checked=activeOnlySelected, value='activeOnly')
        label(for="active-on").round-left=__('Aktive') + ' (' + activeItems + ')'
      if activeItems != totalItems
        .l-grid-cell.l-tablet-one-half.no-margin
          input(name="active", id="active-off", type="radio", checked=!activeOnlySelected, value='all')
          label(for="active-off").round-right=__('Alle') + ' (' + totalItems + ')'

mixin tableDropdownFilter(items, selectedItem)
  select.js-position-filter.l-grid-cell.l-tablet-one-whole(autocomplete="off", class=attributes.class)
    option(data-type='clear', value='all', selected=(selectedItem == undefined))=__('alle anzeigen')
    for item in (items || [])
      option(value=item.id, disabled=('disabled' == item.id), data-type=item.type, data-page-size=item.pageSize, data-count=item.count selected=(selectedItem == item.id))=__(item.name) + (item.count ? " (" + item.count + ")" : "")
